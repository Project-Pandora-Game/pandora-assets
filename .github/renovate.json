{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":disableDependencyDashboard",
		":prHourlyLimitNone",
		":rebaseStalePrs",
		":automergeMinor"
	],
	"autoApprove": true,
	"automergeType": "branch",
	"automergeStrategy": "squash",
	"platformAutomerge": true,
	"rangeStrategy": "pin",
	"onboardingPrTitle": "[DEV] Configure Renovate",
	"semanticCommits": "disabled",
	"commitMessagePrefix": "[CHORE]",
	"configMigration": true,
	"cloneSubmodules": true,
	"labels": [
		"Component: Tooling"
	],
	"git-submodules": {
		"enabled": true,
		"automerge": true,
		"prCreation": "status-success"
	},
	"packageRules": [
		{
			"matchDepTypes": [
				"engines"
			],
			"enabled": false
		},
		{
			"matchPackageNames": [
				"docker.io/node",
				"@types/node"
			],
			"allowedVersions": "^20.x"
		},
		{
			"groupName": "all patched dependencies",
			"groupSlug": "all-patch",
			"matchPackagePatterns": [
				"*"
			],
			"matchUpdateTypes": [
				"patch"
			]
		}
	]
}
