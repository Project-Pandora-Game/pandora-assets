{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "git: init submodules",
			"type": "process",
			"command": "git",
			"args": [
				"submodule",
				"update",
				"--init",
				"--recursive"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"group": "none",
			"problemMatcher": []
		},
		{
			"label": "pnpm: install",
			"type": "process",
			"command": "pnpm",
			"args": [
				"install"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"group": "none",
			"problemMatcher": []
		},
		{
			"label": "pnpm: rebuild",
			"type": "process",
			"command": "pnpm",
			"args": [
				"rebuild"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"group": "none",
			"problemMatcher": []
		},
		{
			"label": "Setup",
			"dependsOn": [
				"git: init submodules",
				"pnpm: install"
			],
			"dependsOrder": "sequence",
			"runOptions": {
				"runOn": "folderOpen"
			},
			"group": "none",
			"problemMatcher": []
		},
		{
			"label": "Build",
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$tsc"
		}
	]
}
