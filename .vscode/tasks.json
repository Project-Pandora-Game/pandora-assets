{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Setup",
			"type": "shell",
			"windows": {
				"command": "${workspaceFolder}\\.hooks\\vscode-setup.bat",
			},
			"linux": {
				"command": "bash",
				"args": [
					"${workspaceFolder}/.hooks/vscode-setup.sh"
				]
			},
			"osx": {
				"command": "zsh",
				"args": [
					"${workspaceFolder}/.hooks/vscode-setup.sh"
				]
			},
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"group": "none",
			"problemMatcher": []
		},
		{
			"label": "Setup (auto)",
			"hide": true,
			"runOptions": {
				"runOn": "folderOpen"
			},
			"dependsOn": [
				"Setup"
			],
			"dependsOrder": "sequence",
			"type": "shell",
			"command": "echo",
			"args": [
				"Automatic setup done, this window should close."
			],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"close": true,
				"clear": false
			},
			"group": "none",
			"problemMatcher": []
		},
		{
			"label": "Build",
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$tsc"
		},
		{
			"label": "Asset development server",
			"type": "npm",
			"script": "dev:inspect",
			"isBackground": true,
			"promptOnClose": false,
			"icon": {
				"id": "run"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": {
				"base": "$tsc",
				"background": {
					"activeOnStart": true,
					"beginsPattern": " File change detected\\. Starting incremental compilation\\.\\.\\.",
					"endsPattern": " Watching for file changes\\."
				}
			}
		},
		{
			"label": "Terminate All Tasks",
			"command": "echo ${input:terminate}",
			"type": "shell",
			"hide": true,
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "terminateAll"
		}
	]
}
