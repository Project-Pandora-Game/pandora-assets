{
	"name": "pandora-assets",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@7.27.1",
	"repository": "git@github.com:Project-Pandora-Game/tooling-template.git",
	"license": "MIT",
	"scripts": {
		"postinstall": "node .hooks/postinstall.cjs",
		"ci": "pnpm run build && pnpm run lint && pnpm run type-check:test && pnpm run test --ci",
		"clean": "rimraf dist",
		"build": "pnpm run clean && tsc -p ./tsconfig.src.json && node --enable-source-maps -r dotenv/config ./dist/index",
		"build:swc": "pnpm run clean && swc src -d dist && node --enable-source-maps -r dotenv/config ./dist/index",
		"dev": "pnpm run clean && tsc-watch -p ./tsconfig.src.json --onSuccess \"node --enable-source-maps -r dotenv/config ./dist/index --watch\"",
		"dev:inspect": "pnpm run clean && tsc-watch -p ./tsconfig.src.json --onSuccess \"node --inspect=26958 --inspect-brk --enable-source-maps -r dotenv/config ./dist/index --watch\"",
		"lint": "eslint --max-warnings 0 --report-unused-disable-directives .",
		"lint:fix": "eslint --fix .",
		"type-check": "tsc -p . --noEmit",
		"type-check:test": "tsc -p ./tsconfig.test.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.src.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"normalize": "node --enable-source-maps ./dist/tools/normalize"
	},
	"dependencies": {
		"dotenv": "^16.0.3",
		"jimp": "^0.22.7",
		"lodash": "^4.17.21",
		"pandora-common": "file:pandora/pandora-common",
		"rimraf": "^4.4.0",
		"sharp": "^0.31.3",
		"simple-git": "^3.17.0"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.41",
		"@swc/jest": "^0.2.24",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.0",
		"@types/lodash": "^4.14.191",
		"@types/node": "^18.15.5",
		"@types/sharp": "^0.31.1",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"eslint": "^8.36.0",
		"express": "^4.18.2",
		"jest": "^29.5.0",
		"rimraf": "^3.0.2",
		"ts-mockito": "^2.6.1",
		"tsc-watch": "^6.0.0",
		"tslib": "^2.5.0",
		"typescript": "^5.0.2"
	}
}
