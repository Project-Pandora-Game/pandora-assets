{
	"name": "pandora-tooling-template",
	"version": "0.1.0",
	"private": true,
	"repository": "git@github.com:Project-Pandora-Game/tooling-template.git",
	"license": "MIT",
	"scripts": {
		"postinstall": "node .hooks/postinstall.cjs",
		"ci": "yarn run build --prod && yarn run lint && yarn run type-check:test && yarn run test",
		"prebuild": "rimraf dist",
		"build": "tsc -p ./tsconfig.src.json && node --enable-source-maps -r dotenv/config ./dist/index",
		"build:swc": "swc src -d dist && node --enable-source-maps -r dotenv/config ./dist/index",
		"predev": "rimraf dist",
		"dev": "tsc-watch -p ./tsconfig.src.json --onSuccess \"node --enable-source-maps -r dotenv/config ./dist/index --watch\"",
		"lint": "eslint --max-warnings 0 --report-unused-disable-directives .",
		"lint:fix": "eslint --fix .",
		"type-check": "tsc -p . --noEmit",
		"type-check:test": "tsc -p ./tsconfig.test.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.src.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"normalize": "node --enable-source-maps ./dist/tools/normalize"
	},
	"dependencies": {
		"dotenv": "^16.0.3",
		"jimp": "^0.16.1",
		"lodash": "^4.17.21",
		"pandora-common": "file:pandora/pandora-common",
		"rimraf": "^3.0.2",
		"simple-git": "^3.14.1"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.177",
		"@swc/jest": "^0.2.20",
		"@types/express": "^4.17.14",
		"@types/jest": "^27.4.0",
		"@types/lodash": "^4.14.182",
		"@types/rimraf": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^5.22.0",
		"@typescript-eslint/parser": "^5.22.0",
		"eslint": "^8.14.0",
		"express": "^4.18.2",
		"jest": "^28.0.3",
		"rimraf": "^3.0.2",
		"ts-mockito": "^2.6.1",
		"tsc-watch": "^5.0.3",
		"tslib": "^2.4.0",
		"typescript": "^4.6.4"
	}
}
