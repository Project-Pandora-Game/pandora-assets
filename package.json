{
	"name": "pandora-assets",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef",
	"engines": {
		"node": ">=22.x"
	},
	"repository": "git@github.com:Project-Pandora-Game/tooling-template.git",
	"license": "MIT",
	"pnpm": {
		"onlyBuiltDependencies": [
			"pandora-common",
			"sharp",
			"unrs-resolver"
		]
	},
	"type": "module",
	"scripts": {
		"postinstall": "node .hooks/postinstall.cjs",
		"ci": "pnpm run build --prod && pnpm run lint && pnpm run type-check:test && pnpm run test --ci",
		"clean": "rimraf dist",
		"build": "pnpm run --silent clean && tsc -p ./tsconfig.json && node --enable-source-maps --env-file=.env ./dist/index",
		"dev": "pnpm run --silent clean && tsc-watch -p ./tsconfig.json --onSuccess \"node --enable-source-maps --env-file=.env ./dist/index --watch\"",
		"dev:inspect": "pnpm run --silent clean && tsc-watch -p ./tsconfig.json --onSuccess \"node --inspect=26958 --enable-source-maps --env-file=.env ./dist/index --watch\"",
		"lint": "eslint --max-warnings 0 .",
		"lint:fix": "eslint --fix .",
		"type-check": "pnpm run '/type-check:.*/'",
		"type-check:test": "tsc -p ./test/tsconfig.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"normalize": "node --enable-source-maps ./dist/tools/normalize"
	},
	"dependencies": {
		"delaunator": "5.0.1",
		"express": "5.1.0",
		"ignore": "7.0.5",
		"immer": "10.1.3",
		"json-diff": "1.0.6",
		"lodash-es": "4.17.21",
		"pandora-common": "github:Project-Pandora-Game/pandora#master&path:pandora-common",
		"rimraf": "6.0.1",
		"sharp": "0.34.4",
		"simple-git": "3.28.0",
		"zod": "4.1.9"
	},
	"devDependencies": {
		"@eslint/js": "9.35.0",
		"@jest/globals": "30.1.2",
		"@stylistic/eslint-plugin": "5.4.0",
		"@types/delaunator": "5.0.3",
		"@types/express": "5.0.3",
		"@types/json-diff": "1.0.3",
		"@types/lodash-es": "4.17.12",
		"@types/node": "22.18.6",
		"eslint": "9.35.0",
		"eslint-plugin-import": "2.32.0",
		"jest": "30.1.3",
		"ts-jest": "29.4.4",
		"tsc-watch": "7.1.1",
		"tslib": "2.8.1",
		"typescript": "5.9.2",
		"typescript-eslint": "8.44.0"
	}
}
