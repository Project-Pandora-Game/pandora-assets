{
	"name": "pandora-assets",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@8.11.0",
	"repository": "git@github.com:Project-Pandora-Game/tooling-template.git",
	"license": "MIT",
	"scripts": {
		"postinstall": "node .hooks/postinstall.cjs",
		"ci": "pnpm run build && pnpm run lint && pnpm run type-check:test && pnpm run test --ci",
		"clean": "rimraf dist",
		"build": "pnpm run --silent clean && tsc -p ./tsconfig.json && node --enable-source-maps -r dotenv/config ./dist/index",
		"dev": "pnpm run --silent clean && tsc-watch -p ./tsconfig.json --onSuccess \"node --enable-source-maps -r dotenv/config ./dist/index --watch\"",
		"dev:inspect": "pnpm run --silent clean && tsc-watch -p ./tsconfig.json --onSuccess \"node --inspect=26958 --inspect-brk --enable-source-maps -r dotenv/config ./dist/index --watch\"",
		"lint": "eslint --max-warnings 0 --report-unused-disable-directives .",
		"lint:fix": "eslint --fix .",
		"type-check": "pnpm run '/type-check:.*/'",
		"type-check:test": "tsc -p ./test/tsconfig.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"normalize": "node --enable-source-maps ./dist/tools/normalize"
	},
	"dependencies": {
		"dotenv": "16.3.1",
		"jimp": "0.22.10",
		"lodash": "4.17.21",
		"pandora-common": "file:pandora/pandora-common",
		"rimraf": "5.0.5",
		"sharp": "0.32.6",
		"simple-git": "3.21.0",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@types/express": "4.17.21",
		"@types/jest": "29.5.10",
		"@types/lodash": "4.14.202",
		"@types/node": "18.18.14",
		"@types/sharp": "0.31.1",
		"@typescript-eslint/eslint-plugin": "6.13.1",
		"@typescript-eslint/parser": "6.13.1",
		"eslint": "8.54.0",
		"express": "4.18.2",
		"immer": "10.0.3",
		"jest": "29.7.0",
		"ts-jest": "29.1.1",
		"ts-mockito": "2.6.1",
		"tsc-watch": "6.0.4",
		"tslib": "2.6.2",
		"typescript": "5.3.2"
	}
}
